{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2018",
		"jsx": "preserve",
		"lib": ["es2018"],
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitAny": true,
		"noImplicitReturns": true
	},
	"include": ["src/**/*", "shared/**/*"]
}
